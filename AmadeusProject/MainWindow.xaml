<Window x:Class="AmadeusProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Amadeus" Height="700" Width="450"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Topmost="False" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Image x:Name="KurisuDisplay" 
               Stretch="Uniform" 
               VerticalAlignment="Bottom" 
               Height="600"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <Border VerticalAlignment="Bottom" Margin="20,0,20,20" 
                Background="#CC000000" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock x:Name="AmadeusOutput" 
                           Text="Initialisation du système Amadeus..." 
                           Foreground="#00FF00" 
                           FontFamily="Consolas" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="UserInput" 
                             Background="#333333" Foreground="White" BorderThickness="0" 
                             Padding="5" KeyDown="UserInput_KeyDown"/>

                    <Button Grid.Column="1" Content="Send" Click="SendButton_Click" 
                            Background="#444" Foreground="White" Margin="5,0,0,0" Padding="10,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
        Background="Transparent" Foreground="Red" FontWeight="Bold" FontSize="16" 
        BorderThickness="0"
        Margin="10" Click="CloseButton_Click"/>
    </Grid>
</Window>